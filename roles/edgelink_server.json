{
	"name": "edgelink_server",
	"chef_type": "role",
	"json_class": "Chef::Role",
	"description": "EdgeLink-managed general server",
	"run_list": [
		"recipe[edgelink_base]",
		"recipe[sshd]",
		"recipe[docker]",
		"recipe[nginx]",
		"recipe[mysql::server]"
	],
	"default_attributes": {
		"sshd": {
			"sshd_config": {
				"PermitEmptyPasswords": "no",
				"Port": [55022, 8080],
				"TCPKeepAlive": "yes",
				"Match": {
					"group sudo": {
						"PasswordAuthentication": "no"
					},
					"group admin": {
						"PasswordAuthentication": "no"
					}
				}
			}
		}
	}
}
